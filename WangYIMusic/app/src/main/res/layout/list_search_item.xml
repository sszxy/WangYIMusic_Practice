<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="5dp"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/list_search_item_img"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:textColor="#000000"
        android:id="@+id/list_search_name_tv"
        android:layout_toEndOf="@+id/list_search_item_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="许嵩的歌"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/list_search_count_tv"
        android:layout_alignLeft="@id/list_search_name_tv"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignTop="@id/list_search_count_tv"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@id/list_search_count_tv"
        android:id="@+id/list_search_playcount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="#000000"
        android:layout_alignLeft="@id/list_search_count_tv"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>