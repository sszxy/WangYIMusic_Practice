<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="40dp">
    <ImageView
        android:id="@+id/history_clock"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/topmenu_icn_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/history_clock"
        android:layout_centerVertical="true"
        android:textColor="@color/textcolortheme"
        android:layout_gravity="center_vertical"
        android:id="@+id/history_music_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/history_clear_img"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_clear_back"
        android:layout_width="18dp"
        android:layout_height="18dp" />
    <View
        android:layout_alignLeft="@id/history_music_tv"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/textcolortheme"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


</RelativeLayout>