<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        app:contentInsetStart="0.0dp"
        android:background="@color/colorTheme"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AlertDialog.AppCompat.Light"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <ImageView
                android:id="@+id/back_view"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:src="@drawable/actionbar_back"
                android:layout_width="30dp"
                android:layout_height="20dp" />
            <EditText
                android:id="@+id/search_edt"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:theme="@style/MyEditText"
                android:hint="@string/search_hint"
                android:layout_toRightOf="@id/back_view"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/clear_img"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_clear"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/my_toolbar"
            android:id="@+id/history_rcl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.TabLayout
        app:tabIndicatorColor="#ffffff"
        app:tabSelectedTextColor="#ffffff"
        app:tabTextColor="#d8d6d6"
        android:visibility="gone"
        android:layout_below="@id/my_toolbar"
        android:background="@color/colorTheme"
        android:id="@+id/search_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:visibility="gone"
        android:layout_below="@+id/search_tab"
        android:id="@+id/search_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <FrameLayout
        android:id="@+id/bottom_frm"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:transitionName="transition"
            android:id="@+id/music_img"
            android:src="@drawable/demo"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:id="@+id/song_name_tv"
            android:textColor="#000000"
            android:text="车站（live）"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/singer_name_tv"
            android:text="李健"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/song_bg_img"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/playbar_btn_playlist"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>