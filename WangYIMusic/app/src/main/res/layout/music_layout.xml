<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle"
    android:divider="@drawable/itemline"
    android:background="@color/bgcolortheme">
    <LinearLayout
        android:id="@+id/local_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:src="@drawable/actionbar_music_normal"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:id="@+id/local_tv"
            android:text="本地音乐"
            android:textColor="@color/textcolortheme"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/local_music_count"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="(0)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/music_icn_local"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:text="最近播放"
            android:textColor="@color/textcolortheme"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="(0)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/music_icn_dld"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:text="下载管理"
            android:textColor="@color/textcolortheme"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="(0)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/music_icn_dj"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:text="我的电台"
            android:textColor="@color/textcolortheme"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="(0)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/music_icn_artist"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:text="我的收藏"
            android:textColor="@color/textcolortheme"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="(0)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>