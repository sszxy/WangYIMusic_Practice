<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/lunbotu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/zhishiqi"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_gravity="center|bottom">
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:clickable="true"
            android:src="@drawable/fm_recommend"
            android:id="@+id/FMimg"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:text="私人FM"
            android:textColor="#272727"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_below="@id/FMimg"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:clickable="true"
            android:src="@drawable/daily_recommend"
            android:id="@+id/daily_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:text="每日歌曲推荐"
            android:textColor="#272727"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/daily_img"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:clickable="true"
            android:src="@drawable/ub_recommend"
            android:id="@+id/music_img"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/music_img"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="云音乐热歌榜"
            android:textColor="#272727" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:text="推荐歌单"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="115dp" />
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="115dp" />
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="115dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#5e5b5b"
                android:text="听一首把自己感动..."
                android:textSize="10dp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#5e5b5b"
                android:text="古风觉晓，春色不过宛若江南"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#5e5b5b"
                android:text="演讲、PPT背景音乐"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="10dp"
            android:text="推荐歌单"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="115dp" />
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="115dp" />
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="115dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#5e5b5b"
                android:text="听一首把自己感动..."
                android:textSize="10dp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#5e5b5b"
                android:text="古风觉晓，春色不过宛若江南"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#5e5b5b"
                android:text="演讲、PPT背景音乐"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="10dp"
            android:text="推荐歌单"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="115dp" />
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="115dp" />
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="115dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#5e5b5b"
                android:text="听一首把自己感动..."
                android:textSize="10dp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#5e5b5b"
                android:text="古风觉晓，春色不过宛若江南"
                android:textSize="10dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#5e5b5b"
                android:text="演讲、PPT背景音乐"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>