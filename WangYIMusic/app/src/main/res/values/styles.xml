<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="quick_option_dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/textcolor_white</item>
    </style>
    <style name="Myanimation" parent="@android:style/Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="MyEditText" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/line_normal</item>
        <item name="colorControlActivated">@color/textcolor_white</item>
    </style>
</resources>
